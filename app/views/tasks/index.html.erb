<h1>Listing tasks</h1>

<table class='table table-bordered'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Deadline</th>
      <th>Content</th>
      <th>Contributor</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.deadline %></td>
        <td><%= task.content %></td>
        <td><%= User.find(task.contributor_id).name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
